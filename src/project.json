{
  "version": "1.0",
  "authors": ["Richard Drew"],
  "description": "A simple API that delivers buzzwords from different categories. Used for demo purposes.",  
  "dependencies": {
    "Microsoft.NETCore.App": {
      "version": "1.0.0",
      "type": "platform"
    },
    "Microsoft.AspNetCore.Mvc": "1.0.0",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.0",
    "Microsoft.Extensions.Configuration.EnvironmentVariables": "1.0.0"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet5.6",
        "dnxcore50",
        "netstandard1.6",
        "portable-net451+win8"
      ]
    }
  },

  "buildOptions": {
    "emitEntryPoint": true,
    "debugType": "portable",
    "preserveCompilationContext": true
  },

  "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },

  "tooling": {
    "defaultNamespace": "BuzzwordApi"
  },

  "publishOptions": {
    "include": [
      "Dockerfile",
      "Dockerfile.debug"
    ]
  }
}
